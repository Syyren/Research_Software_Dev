@page
@model Research_Software_Dev.Pages.Forms.IndexModel
@{
    ViewData["Title"] = "Forms";
}

<h1>Viewing Forms</h1>

<p>
    <a asp-page="./Create" class="btn btn-outline-primary">Create a New Form</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Forms[0].FormName)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Forms != null && Model.Forms.Any())
            {
                @foreach (var form in Model.Forms)
                {
                    <tr>
                        <td>@form.FormName</td>
                        <td>
                            <a class="btn btn-outline-dark" asp-page="./Details" asp-route-id="@form.FormId">Details</a>
                            <a class="btn btn-outline-dark" asp-page="./Edit" asp-route-id="@form.FormId">Edit</a>
                            <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@form.FormId">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No forms available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
