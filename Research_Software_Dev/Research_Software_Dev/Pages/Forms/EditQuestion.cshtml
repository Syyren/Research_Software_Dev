@page "{formId:int}/{questionId}"
@model Research_Software_Dev.Pages.Forms.EditQuestionModel
@{
    ViewData["Title"] = "Edit Question";
}

<h1>Edit Question</h1>

<form method="post">
    <input type="hidden" asp-for="FormId" />
    <input type="hidden" asp-for="Question.QuestionId" />

    <div class="form-group">
        <label>Question Description</label>
        <input type="text" asp-for="Question.QuestionDescription" class="form-control" />
        <span asp-validation-for="Question.QuestionDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Question Number</label>
        <input type="number" asp-for="Question.QuestionNumber" class="form-control" />
        <span asp-validation-for="Question.QuestionNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Edit" asp-route-id="@Model.FormId" class="btn btn-secondary">Cancel</a>
</form>