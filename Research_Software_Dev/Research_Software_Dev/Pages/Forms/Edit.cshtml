@page "{id}"
@model Research_Software_Dev.Pages.Forms.EditModel
@{
    ViewData["Title"] = "Edit Form";
}

<h1>Edit Form</h1>

<form method="post">
    <!-- Adds Question Button -->
    <a asp-page="./AddQuestion" asp-route-formId="@Model.Form.FormId" class="btn btn-outline-success">Add a Question</a>

    <input type="hidden" asp-for="Form.FormId" />

    <!-- Form Name -->
    <div class="form-group">
        <label for="FormName">Form Name</label>
        <input type="text" asp-for="Form.FormName" class="form-control" />
        <span asp-validation-for="Form.FormName" class="text-danger"></span>
    </div>

    <!-- Questions List -->
    <div class="form-group">
        <label>Questions</label>
        <ul id="questions-list" class="list-group">
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                <li class="list-group-item">
                    <input type="hidden" asp-for="Questions[@i].FormId" />
                    <input type="hidden" asp-for="Questions[@i].FormQuestionId" />
                    <div class="row">
                        <div class="col-1">
                            <input type="text" asp-for="Questions[@i].QuestionNumber" value="@Model.Questions[i].QuestionNumber" class="form-control" readonly />
                        </div>
                        <div class="col-8">
                            <input type="text" asp-for="Questions[@i].QuestionDescription" value="@Model.Questions[i].QuestionDescription" class="form-control" readonly />
                        </div>
                        <div class="col-3 text-end">
                            <a class="btn btn-outline-dark" asp-page="./EditQuestion" asp-route-formId="@Model.Form.FormId" asp-route-questionId="@Model.Questions[i].FormQuestionId">Edit</a>
                            <a class="btn btn-outline-danger" asp-page="./DeleteQuestion" asp-route-formId="@Model.Form.FormId" asp-route-questionId="@Model.Questions[i].FormQuestionId">Delete</a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>

    <!-- Action Buttons -->
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-outline-primary">Save</button> | 
        <a class="btn btn-outline-dark" asp-page="./Index">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
            </svg> Back to List
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
