@page "{id:int}"
@model Research_Software_Dev.Pages.Forms.EditModel
@{
    ViewData["Title"] = "Edit Form";
}

<h1>Edit Form</h1>

<form method="post">

    <a asp-page="./AddQuestion" asp-route-formId="@Model.Form.FormId" class="btn btn-success">Add Question</a>

    <input type="hidden" asp-for="Form.FormId" />

    <!-- Form Name -->
    <div class="form-group">
        <label for="FormName">Form Name</label>
        <input type="text" asp-for="Form.FormName" class="form-control" />
        <span asp-validation-for="Form.FormName" class="text-danger"></span>
    </div>

    <!-- Questions List -->
    <div class="form-group">
        <label>Questions</label>
        <ul id="questions-list">
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                <li>
                    <input type="text" name="Questions[@i].QuestionNumber" value="@Model.Questions[i].QuestionNumber" class="form-control" readonly />
                    <input type="hidden" name="Questions[@i].QuestionId" value="@Model.Questions[i].QuestionId" />
                    <input type="text" name="Questions[@i].QuestionDescription" value="@Model.Questions[i].QuestionDescription" class="form-control" readonly />
                    <a asp-page="./EditQuestion" asp-route-formId="@Model.Form.FormId" asp-route-questionId="@Model.Questions[i].QuestionId" class="btn btn-primary">Edit</a>
                    <a asp-page="./DeleteQuestion" asp-route-formId="@Model.Form.FormId" asp-route-questionId="@Model.Questions[i].QuestionId" class="btn btn-danger">Delete</a>
                </li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>