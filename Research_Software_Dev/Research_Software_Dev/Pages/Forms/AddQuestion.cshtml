@page "{formId}"
@model Research_Software_Dev.Pages.Forms.AddQuestionModel
@{
    ViewData["Title"] = "Add Question";
}

<h1>Add Question</h1>

<form method="post">
    <!-- Hidden inputs -->
    <input type="hidden" asp-for="FormId" />
    <input type="hidden" asp-for="Question.FormId" value="@Model.FormId" />

    <!-- Question Description -->
    <div class="form-group">
        <label asp-for="Question.QuestionDescription">Question Description</label>
        <input type="text" asp-for="Question.QuestionDescription" class="form-control" required />
        <span asp-validation-for="Question.QuestionDescription" class="text-danger"></span>
    </div>

    <!-- Question Type -->
    <div class="form-group">
        <label asp-for="Question.Type">Question Type</label>
        <select asp-for="Question.Type" class="form-control" id="question-type-selector">
            <option value="SingleChoice">Single Choice</option>
            <option value="LikertScale">Likert Scale</option>
            <option value="FreeText">Free Text</option>
        </select>
        <span asp-validation-for="Question.Type" class="text-danger"></span>
    </div>

    <!-- Choices or Scale Section -->
    <div class="form-group" id="choices-section" style="display: none;">
        <label>Choices / Scale Values</label>
        <div id="choices-container">
        </div>
        <button type="button" id="add-choice" class="btn btn-outline-primary">Add Value</button>
    </div>

    <!-- Buttons -->
    <div class="mt-2">
        <button type="submit" class="btn btn-outline-primary">Save</button>
        <a asp-page="./Edit" asp-route-id="@Model.FormId" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        const questionTypeSelector = document.getElementById('question-type-selector');
        const choicesSection = document.getElementById('choices-section');
        const choicesContainer = document.getElementById('choices-container');
        const addChoiceButton = document.getElementById('add-choice');

        function toggleSections() {
            const selectedType = questionTypeSelector.value;
            if (selectedType === 'SingleChoice' || selectedType === 'LikertScale') {
                choicesSection.style.display = 'block';
            } else {
                choicesSection.style.display = 'none';
                choicesContainer.innerHTML = ''; // Clears choices when not needed
            }
        }

        function addChoice() {
            const choiceIndex = choicesContainer.childElementCount;
            const choiceInput = document.createElement('div');
            choiceInput.classList.add('form-group');
            choiceInput.innerHTML = `
                <input type="text" name="Choices[${choiceIndex}]" class="form-control mb-2" placeholder="Enter choice or scale value" required />
            `;
            choicesContainer.appendChild(choiceInput);
        }

        questionTypeSelector.addEventListener('change', toggleSections);
        addChoiceButton.addEventListener('click', addChoice);

        toggleSections();
    </script>
}
