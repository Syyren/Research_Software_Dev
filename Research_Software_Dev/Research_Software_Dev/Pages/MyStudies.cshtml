@page
@model MyStudiesModel
@{
    ViewData["Title"] = "My Studies";
}

<h2>My Studies</h2>

@if (Model.Studies != null) 
{
    <table class="table">
        <thead>
            <tr>
                <th>Study Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var study in Model.Studies)
            {
                <tr>
                    <td>@study.StudyName</td>
                    <td>@study.StudyDescription</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No studies found.</p>
}
