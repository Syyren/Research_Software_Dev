@model Research_Software_Dev.Pages.ParticipantSessions.CreateModel

@{
    ViewData["Title"] = "Create Participant Session";
}

<h1>Create Participant Session</h1>

<h4>Participant Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ParticipantSession.ParticipantId" class="control-label">Participant</label>
                <select asp-for="ParticipantSession.ParticipantId" class="form-control" asp-items="ViewBag.ParticipantId">
                    <option value="">-- Select Participant --</option>
                </select>
                <span asp-validation-for="ParticipantSession.ParticipantId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParticipantSession.SessionId" class="control-label">Session</label>
                <select asp-for="ParticipantSession.SessionId" class="form-control" asp-items="ViewBag.SessionId">
                    <option value="">-- Select Session --</option>
                </select>
                <span asp-validation-for="ParticipantSession.SessionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

