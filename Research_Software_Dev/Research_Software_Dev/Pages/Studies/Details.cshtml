@page
@model Research_Software_Dev.Pages.Studies.DetailsModel

@{
    ViewData["Title"] = "Study Details";
}

<h1>"@Model.Study.StudyName" Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Study.StudyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Study.StudyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Study.StudyDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Study.StudyDescription)
        </dd>
        <dt class="col-sm-2">
            Participants
        </dt>
        <dd class="col-sm-10">
            @if (Model.Participants != null && Model.Participants.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var participant in Model.Participants)
                            {
                                <tr>
                                    <td>@participant.ParticipantFirstName @participant.ParticipantLastName</td>
                                    @if (participant.ParticipantEmail != null)
                                    {
                                        <td>@participant.ParticipantEmail</td>
                                    }
                                    else
                                    {
                                        <td>No email supplied.</td>
                                    }
                                    <td>
                                        <a class="btn btn-outline-dark" asp-page="../Participants/Edit" asp-route-id="@participant.ParticipantId">Edit</a> |
                                        <a class="btn btn-outline-dark" asp-page="../Participants/Details" asp-route-id="@participant.ParticipantId">Details</a> |
                                        <a class="btn btn-outline-danger" asp-page="../Participants/Delete" asp-route-id="@participant.ParticipantId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No participants found for this study.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-dark" asp-page="./Edit" asp-route-id="@Model.Study.StudyId">Edit</a> |
    <a class="btn btn-outline-dark" asp-page="./Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
        </svg> Back to List
    </a>
</div>
