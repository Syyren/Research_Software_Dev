@model Research_Software_Dev.Pages.Studies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Study</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="Study.StudyId" value="temp" />
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Study.StudyName" class="control-label"></label>
                <input asp-for="Study.StudyName" class="form-control" />
                <span asp-validation-for="Study.StudyName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Study.StudyDescription" class="control-label"></label>
                <input asp-for="Study.StudyDescription" class="form-control" />
                <span asp-validation-for="Study.StudyDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

