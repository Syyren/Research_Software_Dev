@page
@model Research_Software_Dev.Pages.Studies.IndexModel

@{
    ViewData["Title"] = "Studies List";
}

<h1>Viewing all Studies</h1>

<a class="btn btn-outline-primary" asp-page="Create">Create a New Study</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Study[0].StudyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Study[0].StudyDescription)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Study) 
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudyName)
                </td>
                <td>
                    <div style="max-height: 40vh; max-width: 20vw; overflow-y: scroll; padding: 5px;">
                        <p>
                            @Html.DisplayFor(modelItem => item.StudyDescription)
                        </p>
                    </div>
                </td>
                <td>
                    <a class="btn btn-outline-dark" asp-page="./Edit" asp-route-id="@item.StudyId">Edit</a> |
                    <a class="btn btn-outline-dark" asp-page="./Details" asp-route-id="@item.StudyId">Details</a> |
                    <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.StudyId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>