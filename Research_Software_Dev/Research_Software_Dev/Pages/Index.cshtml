@page
@model IndexModel
@using Research_Software_Dev.Models.Researchers
@using Research_Software_Dev.Models.Studies
@using System.Net.Http.Json
@inject UserManager<Researcher> UserManager
@inject IHttpClientFactory HttpClientFactory

@{
    ViewData["Title"] = "MHRA - Home";

    //gets the current user
    var currentUser = UserManager.GetUserAsync(User).Result;
    bool isUser = currentUser != null;

    //initializing variables
    List<Study> studies = null;
    bool flag = false;

    if (isUser)
    {
        //calling the API to fetch studies
        var httpClient = HttpClientFactory.CreateClient("ApiClient");
        var response = httpClient.GetAsync("/api/researcher/studies").Result;

        if (response.IsSuccessStatusCode)
        {
            studies = response.Content.ReadFromJsonAsync<List<Study>>().Result;
        }
    }
}

<div class="text-center">
    @{
        if (isUser)
        {
            <h1 class="display-4">Welcome @currentUser.ResearcherFirstName @currentUser.ResearcherLastName</h1>
            <p>Your Studies:</p>
            if (studies == null || !studies.Any())
            {
                <p>No studies available.</p>
            }
            else
            {
                if (studies.Count > 3)
                {
                    studies = studies.Take(3).ToList();
                    flag = true;
                }
                <ul>
                    @{
                        foreach (var study in studies)
                        {
                            <li>@study.StudyName</li>
                        }
                        if (flag)
                        {
                            <li>...</li>
                        }
                    }
                </ul>
            }
        }
        else
        {
            <p>Please Sign In.</p>
        }
    }
</div>