@page "{sessionId}"
@model Research_Software_Dev.Pages.ParticipantSessions.AddParticipantModel

@{
    ViewData["Title"] = "Add a Participant to a Session";
}

<h1>Add a Participant to a Session</h1>

<form method="post">
    <input type="hidden" asp-for="SessionId" />

    <a class="btn btn-outline-primary" asp-page="../Participants/Create">Register a New Participant</a>

    <div class="form-group">
        <label asp-for="ParticipantId" class="control-label">Select Participant</label>
        <select asp-for="ParticipantId" class="form-control" asp-items="Model.ParticipantList"></select>
        <span asp-validation-for="ParticipantId" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-outline-dark">Add Participant</button> | 
        <a class="btn btn-outline-dark" asp-page="../Sessions/Index">
