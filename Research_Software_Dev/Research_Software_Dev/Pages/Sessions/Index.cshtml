@page
@model Research_Software_Dev.Pages.Sessions.IndexModel

@{
    ViewData["Title"] = "Sessions";
}

<h1>Viewing Sessions</h1>

<p>
    <a class="btn btn-outline-primary" asp-page="Create">Create a New Session</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].TimeStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].TimeEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].Study)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sessions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Study.StudyName)
                    </td>
                    <td>
                        <a class="btn btn-outline-dark me-1" asp-page="./AddParticipant" asp-route-sessionId="@item.SessionId">
                            Add
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                            </svg>
                        </a>
                        <a class="btn btn-outline-dark me-1" asp-page="../FormAnswers/SelectForm" asp-route-sessionId="@item.SessionId">
                            Add
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark" viewBox="0 0 16 16">
                                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                            </svg>
                        </a>
                        <a class="btn btn-outline-dark me-1" asp-page="./ViewSubmissions" asp-route-sessionId="@item.SessionId">
                            View
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark" viewBox="0 0 16 16">
                                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5z" />
                            </svg>
                        </a>
                        <a class="btn btn-outline-dark me-1" asp-page="./Edit" asp-route-id="@item.SessionId">Edit</a>
                        <a class="btn btn-outline-dark me-1" asp-page="./Details" asp-route-id="@item.SessionId">Details</a>
                        <a class="btn btn-outline-danger me-1" asp-page="./Delete" asp-route-id="@item.SessionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>