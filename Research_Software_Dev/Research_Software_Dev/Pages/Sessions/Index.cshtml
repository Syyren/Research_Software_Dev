@page
@model Research_Software_Dev.Pages.Sessions.IndexModel

@{
    ViewData["Title"] = "Sessions";
}

<h1>Viewing Sessions</h1>

<p>
    <a class="btn btn-outline-primary" asp-page="Create">Create a New Session</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].TimeStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].TimeEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sessions[0].Study)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sessions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Study.StudyName)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-page="./AddParticipant" asp-route-sessionId="@item.SessionId">
                            Add
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                            </svg>
                        </a> |
                        <a class="btn btn-outline-primary" asp-page="../FormAnswers/SelectForm" asp-route-sessionId="@item.SessionId">
                            Add
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-code-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                <path d="M6.854 4.646a.5.5 0 0 1 0 .708L4.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0m2.292 0a.5.5 0 0 0 0 .708L11.793 8l-2.647 2.646a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708 0" />
                            </svg>
                        </a> | 
                        <a class="btn btn-outline-primary" asp-page="./ViewSubmissions" asp-route-sessionId="@item.SessionId">
                            Old
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-code-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                <path d="M6.854 4.646a.5.5 0 0 1 0 .708L4.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0m2.292 0a.5.5 0 0 0 0 .708L11.793 8l-2.647 2.646a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708 0" />
                            </svg>
                        </a> | 
                        <a class="btn btn-outline-dark" asp-page="./Edit" asp-route-id="@item.SessionId">Edit</a> |
                        <a class="btn btn-outline-dark" asp-page="./Details" asp-route-id="@item.SessionId">Details</a> |
                        <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.SessionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>