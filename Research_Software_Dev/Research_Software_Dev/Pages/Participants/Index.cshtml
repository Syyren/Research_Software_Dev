@page
@model Research_Software_Dev.Pages.Participants.IndexModel

@{
    ViewData["Title"] = "Participants";
}

<h1>Viewing Participants</h1>

<p>
    <a class="btn btn-outline-primary" asp-page="Create">Register a New Participant</a>
</p>
<form method="get">
    <div class="form-group">
        <label for="studyFilter">Filter by Study:</label>
        <select asp-for="SelectedStudyId" class="form-control">
            <option value="">-- Select a Study --</option>
            @foreach (var study in Model.Studies)
            {
                <option value="@study.StudyId">@study.StudyName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th style="max-width: 10vw;">
                @Html.DisplayNameFor(model => model.Participant[0].ParticipantFirstName)
            </th>
            <th style="max-width: 10vw;">
                @Html.DisplayNameFor(model => model.Participant[0].ParticipantLastName)
            </th>
            <th style="max-width: 10vw;">
                @Html.DisplayNameFor(model => model.Participant[0].ParticipantAddress)
            </th>
            <th style="max-width: 10vw;">
                @Html.DisplayNameFor(model => model.Participant[0].ParticipantEmail)
            </th>
            <th style="max-width: 10vw;">
                @Html.DisplayNameFor(model => model.Participant[0].ParticipantPhoneNumber)
            </th>
            <th style="max-width: 10vw;">
                @Html.DisplayNameFor(model => model.Participant[0].StudyName)
            </th>
            <th style="max-width: 10vw;">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Participant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudyName)
            </td>
            <td>
                <a class="btn btn-outline-dark" style="min-width: 90px;" asp-page="./Edit" asp-route-id="@item.ParticipantId">Edit</a> |
                <a class="btn btn-outline-dark" style="min-width: 90px;" asp-page="./Details" asp-route-id="@item.ParticipantId">Details</a> |
                <a class="btn btn-outline-danger" style="min-width: 90px;" asp-page="./Delete" asp-route-id="@item.ParticipantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
