@page
@model Research_Software_Dev.Pages.Participants.CreateModel

@{
    ViewData["Title"] = "Register Participant";
}

<h1>Register a Participant</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <input type="hidden" asp-for="Participant.ParticipantId" value="temp" />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Participant.ParticipantFirstName" class="control-label"></label>
                <input asp-for="Participant.ParticipantFirstName" class="form-control" />
                <span asp-validation-for="Participant.ParticipantFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Participant.ParticipantLastName" class="control-label"></label>
                <input asp-for="Participant.ParticipantLastName" class="form-control" />
                <span asp-validation-for="Participant.ParticipantLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.ParticipantAddress" class="control-label"></label>
                <input asp-for="Participant.ParticipantAddress" class="form-control" />
                <span asp-validation-for="Participant.ParticipantAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.ParticipantEmail" class="control-label"></label>
                <input asp-for="Participant.ParticipantEmail" class="form-control" />
                <span asp-validation-for="Participant.ParticipantEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.ParticipantPhoneNumber" class="control-label"></label>
                <input asp-for="Participant.ParticipantPhoneNumber" class="form-control" />
                <span asp-validation-for="Participant.ParticipantPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label for="StudyId">Select Study</label>
                <select asp-for="SelectedStudyId" class="form-control">
                    <option value="">-- Select a Study --</option>
                    @foreach (var study in Model.Studies.OrderBy(s => s.StudyName))
                    {
                        <option value="@study.StudyId">@study.StudyName</option>
                    }
                </select>
                <span asp-validation-for="SelectedStudyId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Register" class="btn btn-outline-primary" /> | 
                <a class="btn btn-outline-dark" asp-page="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                    </svg> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

