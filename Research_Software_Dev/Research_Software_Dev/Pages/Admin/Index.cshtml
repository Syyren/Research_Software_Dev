@page
@model Research_Software_Dev.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Account Admin";
}

<h1>Account Admin</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @if (Model.UserRoles.ContainsKey(user.Id))
                    {
                        @string.Join(", ", Model.UserRoles[user.Id])
                    }
                    else
                    {
                        <span>No roles</span>
                    }
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit Roles</a>
                    <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
