@page "{participantId}"
@model Research_Software_Dev.Pages.Forms.SelectSessionModel
@{
    ViewData["Title"] = "Select Session";
}

<h1>Select Session</h1>

<p>Participant: @Model.ParticipantName</p>

<form method="post">
    <input type="hidden" asp-for="ParticipantId" />

    <div class="form-group mb-2">
        <label for="SessionId">Session</label>
        <select asp-for="SessionId" class="form-control">
            <option value="">-- Select a Session --</option>
            @foreach (var session in Model.Sessions)
            {
                <option value="@session.SessionId">
                    @($"{session.Date:yyyy-MM-dd} from {session.TimeStart} to {session.TimeEnd}")
                </option>
            }
        </select>
        <span asp-validation-for="SessionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">Next</button>
</form>
